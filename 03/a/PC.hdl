/**
 * A 16-bit counter with load and reset control bits.
 * if      (reset[t] == 1) out[t+1] = 0
 * else if (load[t] == 1)  out[t+1] = in[t]
 * else if (inc[t] == 1)   out[t+1] = out[t] + 1  (integer addition)
 * else                    out[t+1] = out[t]
 */

CHIP PC {
    IN in[16],load,inc,reset;
    OUT out[16];

    PARTS:
    Mux4Way16(a=FEEDBACK, b=in, c=false, d=false, sel[0]=reset, sel[1]=load, out=INPUT);
    Register(in=INPUT, load=true, out=REG);
    Inc16(in=REG, out=INC);
    Mux16(a=REG, b=INC, out=FEEDBACK, out=out);
}
